{
  "compilerOptions": {
    /* Basic Options */
    // "incremental": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "esModuleInterop": true
  }
}
